---
interface Props {
    index: number;
    title: string;
    authors: string;
    venue: string;
    link: string;
}

const { index, title, authors, venue, link } = Astro.props;
---

<div class="relative group">
    <div class="flex flex-col gap-3">
      
        <div class="flex items-start gap-4">
            <span class="font-schoolbell text-4xl font-bold text-gray-700 dark:text-gray-400 mt-1">
                {String(index + 1).padStart(2, '0')}
            </span>
            <div class="flex-1">
                <h2 class="font-schoolbell text-3xl font-bold leading-tight hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {title}
                </h2>
                <div class="flex justify-between items-center w-full">
                    <div>
                        <p class="font-schoolbell text-xl text-gray-600 dark:text-gray-100 mt-2 italic">
                            {authors}
                        </p>
                    </div>
                    <div>
                        <div class="w-fit relative">
                            <span class="font-schoolbell text-nowrap text-lg px-4 py-1 rounded-lg -rotate-1">
                                {venue}
                            </span>
                            <div class="absolute -bottom-6 -left-1 w-full h-full px-3">
                                <div class="w-full h-1 bg-yellow-400 dark:bg-yellow-200 -z-10 -rotate-1 rounded-sm opacity-100"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap items-center gap-4">
                    <a href={link} class="font-schoolbell text-xl text-emerald-600 dark:text-emerald-600 hover:underline decoration-wavy underline-offset-4">
                        â†’ Read Paper
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-16 border-t-2 border-dashed border-gray-200 dark:border-gray-800 w-2/3 mx-auto opacity-50"></div>
</div>